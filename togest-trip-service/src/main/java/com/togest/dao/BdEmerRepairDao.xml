<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.togest.dao.BdEmerRepairDao">

    <resultMap type="com.togest.domain.dto.BdEmerRepairDTO" id="BaseResultMap">
		<result property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="fileId" column="file_id"/>
		
		<result property="fileName" column="fileName"/>
    </resultMap>
    
    <sql id="Base_Table">
		bd_emer_repair ber
		left join sys_file sf on ber.file_id = sf.id
	</sql>
	
    <sql id="Base_Column_List">
    	ber.id,
    	ber.name,
    	ber.file_id,
    	sf.real_name as fileName
    </sql>
    
    <sql id="baseConditions">
		<if test="fileId != null"> 
			and ber.file_id = #{fileId}
		</if>
		<if test="name != null"> 
			and ber.name like '%${name}%'
		</if>
		<if test="fileName != null"> 
			and sf.real_name = #{fileName}
		</if>
    </sql>

	<select id="getByKey" parameterType="java.lang.String" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"></include>
		from <include refid="Base_Table"></include>
		where ber.id = #{id} and ber.del_flag = 0
	</select>
	
	<select id="getListByKeys" parameterType="java.util.List" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"></include>
		from <include refid="Base_Table"></include>
		where ber.del_flag = 0 and ber.id in
		<foreach item="item" collection="ids" separator="," open="("
					close=")" index="">
					#{item}
		</foreach>
	</select>
	
	<select id="getByEntity" parameterType="com.togest.domain.dto.BdEmerRepairDTO" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"></include>
		from <include refid="Base_Table"></include>
		<where>
			ber.del_flag = 0
			<include refid="baseConditions"></include>
		</where>
	</select>

	<select id="findList" parameterType="com.togest.domain.dto.BdEmerRepairDTO" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"></include>
		from <include refid="Base_Table"></include>
		<where>
		 	ber.del_flag = 0
			<include refid="baseConditions"></include>
		</where>
		<choose>
            <when test="orderBy!=null and orderBy!=''">
                order by ber.${orderBy}
            </when>
			<otherwise>
            	 order by ber.sort desc
			</otherwise>
        </choose>
	</select>
	
	<select id="findEmerRepairList" parameterType="com.togest.request.BdInfoQueryFilter" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"></include>
		from <include refid="Base_Table"></include>
		<where>
		 	ber.del_flag = 0
			<include refid="baseConditions"></include>
		</where>
		<choose>
            <when test="orderBy!=null and orderBy!=''">
                order by ber.${orderBy}
            </when>
			<otherwise>
            	 order by ber.sort desc
			</otherwise>
        </choose>
		<if test="page!=null and page.startNum!=null and page.endNum !=null">
			limit #{page.startNum},#{page.endNum}
		</if>
	</select>
	
	<select id="findAllList" parameterType="com.togest.domain.dto.BdEmerRepairDTO" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"></include>
		from <include refid="Base_Table"></include>
		where ber.del_flag = 0
		order by ber.sort desc
	</select>
	 
	<insert id="insert" parameterType="com.togest.domain.dto.BdEmerRepairDTO">
		insert into bd_emer_repair
		<trim prefix="(" suffix=")" suffixOverrides="," >
            id,
            name,
            file_id,
			<if test="sort!=null">sort,</if>
            del_flag,
            create_ip,
            create_by,
            create_date,
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			#{id},
			#{name},
			#{fileId},
			<if test="sort!=null">#{sort},</if>
			#{delFlag},
			#{createIp},
			#{createBy},
			#{createDate},
		</trim>
	</insert>
	 
	<update id="update" parameterType="com.togest.domain.dto.BdEmerRepairDTO">
		update bd_emer_repair 
		<trim prefix="set" suffixOverrides=",">
				name = #{name},
				file_id = #{fileId},
				<if test="sort!=null">sort = #{sort},</if>
				update_ip = #{updateIp},
				update_by = #{updateBy},
				update_date = #{updateDate},
		</trim>
		where id = #{id}
	</update>
	
	
	<delete id="deleteByKey">
		delete from bd_emer_repair where id in 
		<foreach item="item" collection="id.split(',')" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>

	<update id="delete" parameterType="com.togest.domain.dto.BdEmerRepairDTO">
		update bd_emer_repair
		set del_flag=#{delFlag},delete_by=#{deleteBy},delete_date=#{deleteDate},delete_ip=#{deleteIp}
		where 
		id in 
		<foreach item="item" collection="id.split(',')" separator="," open="("
					close=")">
					#{item}
		</foreach>
	</update>

</mapper>