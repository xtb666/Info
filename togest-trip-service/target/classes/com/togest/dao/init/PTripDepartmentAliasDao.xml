<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.togest.dao.init.PTripDepartmentAliasDao">

    <resultMap type="com.togest.domain.init.PTripDepartmentAlias" id="BaseResultMap">
		<result property="id" column="id"/>
		<result property="deptId" column="dept_id"/>
		<result property="name" column="name"/>
		<result property="sort" column="sort"/>
    </resultMap>
    
    <sql id="baseColumns">
    	id,
    	dept_id,
    	name,
    	sort
    </sql>
    
    <sql id="baseConditions">
		<if test="deptId != null"> 
			and dept_id in 
			<foreach item="item" collection="deptId.split(',')" open="(" separator="," close=")">
				#{item}
			</foreach>
		</if>
		<if test="name != null"> 
			and name = #{name}
		</if>
		<if test="delFlag != null"> 
			and del_flag = #{delFlag}
		</if>
    </sql>

	<select id="getByKey" parameterType="java.lang.String" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from p_trip_department_alias
		where id = #{id}
	</select>
	
	<select id="getListByKeys" parameterType="java.util.List" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from p_trip_department_alias
		where id in
		<foreach item="item" collection="ids" separator="," open="("
					close=")" index="">
					#{item}
		</foreach>
	</select>
	
	<select id="getByEntity" parameterType="com.togest.domain.init.PTripDepartmentAlias" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from p_trip_department_alias
		<where>
			<include refid="baseConditions"></include>
		</where>
	</select>

	<select id="findList" parameterType="com.togest.domain.init.PTripDepartmentAlias" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from p_trip_department_alias
		<where>
			<include refid="baseConditions"></include>
			<choose>
            <when test="orderBy!=null and orderBy!=''">
                order by ${orderBy}
            </when>
			<otherwise>
                order by sort desc
			</otherwise>
        </choose>
		</where>
	</select>
	<select id="findAllList" parameterType="com.togest.domain.init.PTripDepartmentAlias" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from p_trip_department_alias
		<where>
			del_flag = 0
		</where>
	</select>
	 
	<insert id="insert" parameterType="com.togest.domain.init.PTripDepartmentAlias">
		insert into p_trip_department_alias
		<trim prefix="(" suffix=")" suffixOverrides="," >
            id,
            dept_id,
            name,
            del_flag,
            create_by,
            create_date,
			<if test="sort!=null">sort</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			#{id},
			#{deptId},
			#{name},
			#{delFlag},
			#{createBy},
			#{createDate},
			<if test="sort!=null">#{sort}</if>
		</trim>
	</insert>
	 
	<update id="update" parameterType="com.togest.domain.init.PTripDepartmentAlias">
		update p_trip_department_alias 
		<set >
		dept_id = #{deptId},
		name = #{name},
		update_by = #{updateBy},
		update_date = #{updateDate},
		<if test="sort!=null">sort = #{sort}</if>
		</set >
		where id = #{id}
	</update>
	
	
	<delete id="deleteByKey">
		delete from p_trip_department_alias where id in 
		<foreach item="item" collection="id.split(',')" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>

	<update id="delete" parameterType="com.togest.domain.init.PTripDepartmentAlias">
		update p_trip_department_alias
		set del_flag=#{delFlag},delete_by=#{deleteBy},delete_date=#{deleteDate},delete_ip=#{deleteIp}
		where 
		id in 
		<foreach item="item" collection="id.split(',')" separator="," open="("
					close=")">
					#{item}
		</foreach>

	</update>

</mapper>