<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.togest.dao.DefectHandleDeadlineDao">

    <resultMap type="com.togest.domain.DefectHandleDeadline" id="defectHandleDeadlineMap">
		<result property="id" column="id"/>
		<result property="defectDataLevel" column="defect_data_level"/>
		<result property="defectDataCategory" column="defect_data_category"/>
		<result property="reviewDeadline" column="review_deadline"/>
		<result property="reformDeadline" column="reform_deadline"/>
		<result property="sort" column="sort"/>
    </resultMap>
    
    <sql id="baseColumns">
    	id,
    	defect_data_level,
    	defect_data_category,
    	review_deadline,
    	reform_deadline,
    	sort

    </sql>
    
    <sql id="baseConditions">
		<if test="defectDataLevel != null"> 
			and defect_data_level = #{defectDataLevel}
		</if>
		<if test="defectDataCategory != null"> 
			and defect_data_category = #{defectDataCategory}
		</if>
		<if test="reviewDeadline != null"> 
			and review_deadline = #{reviewDeadline}
		</if>
		<if test="reformDeadline != null"> 
			and reform_deadline = #{reformDeadline}
		</if>
		<if test="delFlag != null"> 
			and del_flag = #{delFlag}
		</if>
    </sql>

	<select id="getByKey" parameterType="java.lang.String" resultMap="defectHandleDeadlineMap">
		select <include refid="baseColumns"></include>
		from 6c_defect_handle_deadline
		where id = #{id}
	</select>
	
	<select id="getListByKeys" parameterType="java.util.List" resultMap="defectHandleDeadlineMap">
		select <include refid="baseColumns"></include>
		from 6c_defect_handle_deadline
		where id in
		<foreach item="item" collection="ids" separator="," open="("
					close=")" index="">
					#{item}
		</foreach>
	</select>
	
	<select id="getByEntity" parameterType="com.togest.domain.DefectHandleDeadline" resultMap="defectHandleDeadlineMap">
		select <include refid="baseColumns"></include>
		from 6c_defect_handle_deadline
		<where>
			<include refid="baseConditions"></include>
		</where>
	</select>

	<select id="findList" parameterType="com.togest.domain.DefectHandleDeadline" resultMap="defectHandleDeadlineMap">
		select <include refid="baseColumns"></include>
		from 6c_defect_handle_deadline
		<where>
			<include refid="baseConditions"></include>
			<choose>
            <when test="orderBy!=null and orderBy!=''">
                order by ${orderBy}
            </when>
			<otherwise>
                order by sort desc
			</otherwise>
        </choose>
		</where>
	</select>
	<select id="findAllList" parameterType="com.togest.domain.DefectHandleDeadline" resultMap="defectHandleDeadlineMap">
		select <include refid="baseColumns"></include>
		from 6c_defect_handle_deadline
		<where>
			del_flag = 0
		</where>
	</select>
	 
	<insert id="insert" parameterType="com.togest.domain.DefectHandleDeadline">
		insert into 6c_defect_handle_deadline
		<trim prefix="(" suffix=")" suffixOverrides="," >
            id,
            defect_data_level,
            defect_data_category,
            review_deadline,
            reform_deadline,
			<if test="sort!=null">sort,</if>
            del_flag,
            create_ip,
            create_by,
            create_date,
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			#{id},
			#{defectDataLevel},
			#{defectDataCategory},
			#{reviewDeadline},
			#{reformDeadline},
			<if test="sort!=null">#{sort},</if>
			#{delFlag},
			#{createIp},
			#{createBy},
			#{createDate},
		</trim>
	</insert>
	 
	<update id="update" parameterType="com.togest.domain.DefectHandleDeadline">
		update 6c_defect_handle_deadline 
		<set >
		defect_data_level = #{defectDataLevel},
		defect_data_category = #{defectDataCategory},
		review_deadline = #{reviewDeadline},
		reform_deadline = #{reformDeadline},
		<if test="sort!=null">sort = #{sort},</if>
		update_ip = #{updateIp},
		update_by = #{updateBy},
		update_date = #{updateDate},
		</set >
		where id = #{id}
	</update>
	
	
	<delete id="deleteByKey">
		delete from 6c_defect_handle_deadline where id in 
		<foreach item="item" collection="id.split(',')" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>

	<update id="delete" parameterType="com.togest.domain.DefectHandleDeadline">
		update 6c_defect_handle_deadline
		set del_flag=#{delFlag},delete_by=#{deleteBy},delete_date=#{deleteDate},delete_ip=#{deleteIp}
		where 
		id in 
		<foreach item="item" collection="id.split(',')" separator="," open="("
					close=")">
					#{item}
		</foreach>

	</update>

</mapper>