<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.togest.dao.WireHeightControlHistoryDao">

    <resultMap type="com.togest.domain.WireHeightControlHistoryDTO" id="BaseResultMap">
		<result property="id" column="id"/>
		<result property="controlId" column="control_id"/>
		<result property="workAreaId" column="work_area_id"/>
		<result property="lineId" column="line_id"/>
		<result property="direction" column="direction"/>
		<result property="psaId" column="psa_id"/>
		<result property="tunnelId" column="tunnel_id"/>
		<result property="pillarId" column="pillar_id"/>
		<result property="glb" column="glb"/>
		<result property="recordDate" column="record_date"/>
		<result property="lastModifyDate" column="last_modify_date"/>
		<result property="standarLineHeight" column="standar_line_height"/>
		<result property="standarLineHeightUp" column="standar_line_height_up"/>
		<result property="standarLineHeightDown" column="standar_line_height_down"/>
		<result property="version" column="version"/>
		<result property="isNew" column="is_new"/>
		<result property="sort" column="sort"/>
		
		<result property="pillarNum" column="pillarNum"/>
		<result property="pillarName" column="pillarName"/>
		<result property="tunnelName" column="tunnelName"/>
    </resultMap>
    
    <sql id="baseColumns">
    	whch.id,
    	whch.control_id,
    	whch.pillar_id,
    	whch.record_date,
    	whch.last_modify_date,
    	whch.standar_line_height,
    	whch.standar_line_height_up,
    	whch.standar_line_height_down,
    	whch.version,
    	whch.is_new,
    	whch.sort,
    	jepi.dept_id work_area_id,
    	jepi.pl_id line_id,
    	jepi.direction direction,
    	jepi.psa_id psa_id,
    	jepi.tunnel_id tunnel_id,
    	jepi.start_km glb,
    	jepi.num pillarNum,
    	jepi.name pillarName,
    	tunnel.name tunnelName
    </sql>
    
    <sql id="Base_Table">
		6c_wire_height_control_history whch 
		left join 6c_wire_height_control whc on whc.id = whch.control_id
		left join jcw_equ_pillar_info jepi on whch.pillar_id = jepi.id
		left join p_tunnel tunnel on jepi.tunnel_id = tunnel.id
	</sql>
    
    <sql id="baseConditions">
    	<if test="workAreaId !=null and workAreaId !=''">
			<if test="isChild==true">
				and jepi.dept_id in 
				(select id from p_department where parent_ids like '%${workAreaId}%' or id = #{workAreaId})
			</if>
			<if test="isChild==false">
				and jepi.dept_id=#{workAreaId}
			</if>
		</if>
		<if test="controlId != null"> 
			and whch.control_id = #{controlId}
		</if>
		<if test="lineId != null"> 
			and jepi.pl_id = #{lineId}
		</if>
		<if test="direction != null"> 
			and jepi.direction = #{direction}
		</if>
		<if test="psaId != null"> 
			and jepi.psa_id = #{psaId}
		</if>
		<if test="tunnelId != null"> 
			and jepi.tunnel_id = #{tunnelId}
		</if>
		<if test="pillarId != null"> 
			and whch.pillar_id = #{pillarId}
		</if>
		<if test="glb != null"> 
			and jepi.start_km = #{glb}
		</if>
		<if test="recordDate != null"> 
			and whch.record_date = #{recordDate}
		</if>
		<if test="lastModifyDate != null"> 
			and whch.last_modify_date = #{lastModifyDate}
		</if>
		<if test="pillarNum != null"> 
			and jepi.num = #{pillarNum}
		</if>
		<if test="pillarName != null"> 
			and jepi.name = #{pillarName}
		</if>
		<if test="standarLineHeight != null"> 
			and whch.standar_line_height = #{standarLineHeight}
		</if>
		<if test="standarLineHeightUp != null"> 
			and whch.standar_line_height_up = #{standarLineHeightUp}
		</if>
		<if test="standarLineHeightDown != null"> 
			and whch.standar_line_height_down = #{standarLineHeightDown}
		</if>
		<if test="version != null"> 
			and whch.version = #{version}
		</if>
		<if test="isNew != null"> 
			and whch.is_new = #{isNew}
		</if>
		<if test="delFlag != null"> 
			and whch.del_flag = #{delFlag}
		</if>
    </sql>

	<select id="getByKey" parameterType="java.lang.String" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from <include refid="Base_Table"></include>
		where whch.id = #{id}
	</select>
	
	<select id="getListByKeys" parameterType="java.util.List" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from <include refid="Base_Table"></include>
		where whch.id in
		<foreach item="item" collection="ids" separator="," open="("
					close=")" index="">
					#{item}
		</foreach>
	</select>
	
	<select id="getByEntity" parameterType="com.togest.domain.WireHeightControlHistoryDTO" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from <include refid="Base_Table"></include>
		<where>
			<include refid="baseConditions"></include>
		</where>
	</select>

	<select id="findList" parameterType="com.togest.domain.WireHeightControlHistoryDTO" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from <include refid="Base_Table"></include>
		<where>
			<include refid="baseConditions"></include>
			<choose>
            <when test="orderBy!=null and orderBy!=''">
                order by whch.${orderBy}
            </when>
			<otherwise>
                order by whch.version desc, whch.sort
			</otherwise>
        </choose>
		</where>
	</select>
	<select id="findAllList" parameterType="com.togest.domain.WireHeightControlHistoryDTO" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from <include refid="Base_Table"></include>
		<where>
			whch.del_flag = 0
		</where>
	</select>
	 
	<select id="findHistoryByMaxVersion" parameterType="java.lang.String" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from <include refid="Base_Table"></include>
		<where>
			whch.del_flag = 0 and whch.is_new = 1
			<if test="controlId != null"> 
				and whch.control_id = #{controlId}
			</if>
			order by whch.version desc limit 1
		</where>
	</select>
	
	<select id="findLastNewWireHeightByPillars" parameterType="java.util.List" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from <include refid="Base_Table"></include>
		<where>
			whch.del_flag = 0
			<choose>
				<when test="pillarIdList != null and pillarIdList.size>0">
					and whch.is_new = 1 and whch.pillar_id in
					<foreach item="pillarId" collection="pillarIdList" separator="," open="("
							close=")" index="">
							#{pillarId}
					</foreach>
				</when>
				<otherwise>
				and 1= 0
				</otherwise>
			</choose>
		</where>
	</select>
	
	<select id="checkRepeat" parameterType="com.togest.domain.WireHeightControlHistoryDTO" resultMap="BaseResultMap">
		select <include refid="baseColumns"></include>
		from <include refid="Base_Table"></include>
		<where>
			whch.del_flag = 0
			<choose>
				<when test="entity.workAreaId != null"> 
					and jepi.dept_id = #{entity.workAreaId}
				</when>
				<otherwise>
					and jepi.dept_id is null
				</otherwise>
			</choose>
			<choose>
				<when test="entity.lineId != null"> 
					and jepi.pl_id = #{entity.lineId}
				</when>
				<otherwise>
					and jepi.pl_id is null
				</otherwise>
			</choose>
			<choose>
				<when test="entity.psaId != null"> 
					and jepi.psa_id = #{entity.psaId}
				</when>
				<otherwise>
					and jepi.psa_id is null
				</otherwise>
			</choose>
			<choose>
				<when test="entity.direction != null"> 
					and jepi.direction = #{entity.direction}
				</when>
				<otherwise>
					and jepi.direction is null
				</otherwise>
			</choose>
			<choose>
				<when test="entity.pillarId != null"> 
					and whch.pillar_id = #{entity.pillarId}
				</when>
				<otherwise>
					and whch.pillar_id is null
				</otherwise>
			</choose>
		</where>
	</select>
	
	<insert id="insert" parameterType="com.togest.domain.WireHeightControlHistoryDTO">
		insert into 6c_wire_height_control_history
		<trim prefix="(" suffix=")" suffixOverrides="," >
            id,
            control_id,
            work_area_id,
            line_id,
            direction,
            psa_id,
            tunnel_id,
            pillar_id,
            glb,
            record_date,
            last_modify_date,
            standar_line_height,
            standar_line_height_up,
            standar_line_height_down,
            version,
            is_new,
            del_flag,
            create_ip,
            create_by,
            create_date,
			<if test="sort!=null">sort</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			#{id},
			#{controlId},
			#{workAreaId},
			#{lineId},
			#{direction},
			#{psaId},
			#{tunnelId},
			#{pillarId},
			#{glb},
			#{recordDate},
			#{lastModifyDate},
			#{standarLineHeight},
			#{standarLineHeightUp},
			#{standarLineHeightDown},
			#{version},
			#{isNew},
			#{delFlag},
			#{createIp},
			#{createBy},
			#{createDate},
			<if test="sort!=null">#{sort}</if>
		</trim>
	</insert>
	 
	<update id="update" parameterType="com.togest.domain.WireHeightControlHistoryDTO">
		update 6c_wire_height_control_history 
		<set >
		control_id = #{controlId},
		line_id = #{lineId},
		work_area_id = #{workAreaId},
		direction = #{direction},
		psa_id = #{psaId},
		tunnel_id = #{tunnelId},
		pillar_id = #{pillarId},
		glb = #{glb},
		record_date = #{recordDate},
		last_modify_date = #{lastModifyDate},
		standar_line_height = #{standarLineHeight},
		standar_line_height_up=#{standarLineHeightUp},
        standar_line_height_down=#{standarLineHeightDown},
		version = #{version},
		is_new = #{isNew},
		update_ip = #{updateIp},
		update_by = #{updateBy},
		update_date = #{updateDate},
		<if test="sort!=null">sort = #{sort}</if>
		</set >
		where id = #{id}
	</update>
	
	
	<delete id="deleteByKey">
		delete from 6c_wire_height_control_history where id in 
		<foreach item="item" collection="id.split(',')" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>

	<update id="delete" parameterType="com.togest.domain.WireHeightControlHistoryDTO">
		update 6c_wire_height_control_history
		set del_flag=#{delFlag},delete_by=#{deleteBy},delete_date=#{deleteDate},delete_ip=#{deleteIp}
		where 
		id in 
		<foreach item="item" collection="id.split(',')" separator="," open="("
					close=")">
					#{item}
		</foreach>

	</update>

</mapper>