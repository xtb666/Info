<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.togest.dao.NoticeDefectDao">
	<resultMap id="BaseResultMap" type="com.togest.domain.NoticeDefect">
		<id column="id" property="id" />
		<result column="notice_section_id" property="noticeSectionId" />
		<result column="defect_id" property="defectId" />
	</resultMap>

	<sql id="Base_Column_List">
	</sql>

	<sql id="Base_Table">
	</sql>

	<insert id="insert" parameterType="com.togest.domain.NoticeDefect">
		insert into 6c_notice_defect(
			id, notice_section_id, defect_id
		)
		values(
			#{id}, #{noticeSectionId}, #{defectId}
		)
	</insert>
	
	<select id="getDefectIds" parameterType="java.lang.String" resultType="java.lang.String">
		select defect_id
		from 6c_notice_defect
		where notice_section_id = #{noticeSectionId}
	</select>
	<select id="getDefectIdsByNoticeSectionIds" parameterType="java.util.List" resultType="java.lang.String">
		select defect_id
		from 6c_notice_defect
		where notice_section_id in 
		<foreach item="item" collection="noticeSectionIds" separator="," open="("
			close=")" index="">
			#{item}
		</foreach> 
	</select>
	
	<delete id="deleteByNoticeSectionId" parameterType="java.util.List">
		delete from 6c_notice_defect
		where notice_section_id in
		<foreach item="item" collection="ids" separator="," open="("
			close=")" index="">
			#{item}
		</foreach> 
	</delete>
	
	<select id="getNoticeSectionIds" parameterType="java.util.List" resultType="java.lang.String">
		select distinct defect_id
		from 6c_notice_defect
		where defect_id in
		<foreach item="item" collection="defectIds" separator="," open="("
			close=")" index="">
			#{item}
		</foreach> 
	</select>

</mapper>